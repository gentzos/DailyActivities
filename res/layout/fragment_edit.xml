<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/chg_pass_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_grey"
                android:text="@string/action_chg_pass"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/chg_adrss_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/btn_grey"
                android:text="@string/action_chg_adrs"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/chg_pnumb_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/btn_grey"
                android:text="@string/action_chg_pnum" />

            <Button
                android:id="@+id/chg_crdtn_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_grey"
                android:text="@string/action_chg_crdt" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/fname3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#31b6e7" />
        
    </LinearLayout>

</ScrollView>